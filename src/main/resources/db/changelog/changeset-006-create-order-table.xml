<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="6" author="jakubgralinski">
        <createTable tableName="order_table">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_id" type="BIGINT"/>
            <column name="placed_at" type="TIMESTAMP"/>
            <column name="status" type="VARCHAR(50)"/>
            <column name="total" type="DECIMAL(10,2)"/>
            <column name="shipping_address" type="VARCHAR(255)"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="order_table" baseColumnNames="user_id"
            referencedTableName="user" referencedColumnNames="id"
            constraintName="fk_order_user"/>
    </changeSet>

</databaseChangeLog> 